@model DoganSystem.Modules.AgentOrchestrator.Application.Dtos.CreateEmployeeAgentDto
@{
    ViewData["Title"] = "Create Employee Agent";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Create New Employee Agent</h2>
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="TenantId" class="form-label">Tenant ID *</label>
                    <input asp-for="TenantId" type="text" class="form-control" required />
                    <span asp-validation-for="TenantId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EmployeeName" class="form-label">Employee Name *</label>
                    <input asp-for="EmployeeName" class="form-control" required />
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label">Role *</label>
                    <input asp-for="Role" class="form-control" required />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Department" class="form-label">Department</label>
                    <input asp-for="Department" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Capabilities (comma-separated)</label>
                    <input type="text" class="form-control" id="capabilitiesInput" placeholder="customer_management, quotation, etc." />
                    <small class="form-text text-muted">Enter capabilities separated by commas</small>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Create Agent</button>
                    <a href="/Agents" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const capabilitiesInput = document.getElementById('capabilitiesInput');
            const capabilities = capabilitiesInput.value.split(',').map(c => c.trim()).filter(c => c);
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'Capabilities';
            hiddenInput.value = JSON.stringify(capabilities);
            this.appendChild(hiddenInput);
        });
    </script>
}
