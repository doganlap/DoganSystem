@using Microsoft.Extensions.Localization
@using DoganSystem.Localization
@inject IStringLocalizer<GrcResource> L
@{
    ViewData["Title"] = L["Public:Credentials:Title"];
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-4">@L["Public:Credentials:Headline"]</h1>
                <p class="lead">@L["Public:Credentials:Subtitle"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Certifications Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-brand-primary">@L["Public:Credentials:CertsTitle"]</h2>
                <p class="text-muted lead">@L["Public:Credentials:CertsDesc"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="industry-card text-center">
                    <i class="fas fa-certificate fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Credentials:Cert1:Title"]</h5>
                    <p class="text-muted">@L["Public:Credentials:Cert1:Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="industry-card text-center">
                    <i class="fas fa-shield-check fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Credentials:Cert2:Title"]</h5>
                    <p class="text-muted">@L["Public:Credentials:Cert2:Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="industry-card text-center">
                    <i class="fas fa-network-wired fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Credentials:Cert3:Title"]</h5>
                    <p class="text-muted">@L["Public:Credentials:Cert3:Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Partnerships Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-brand-primary">@L["Public:Credentials:PartnersTitle"]</h2>
                <p class="text-muted lead">@L["Public:Credentials:PartnersDesc"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="industry-card">
                    <h5 class="text-brand-primary mb-3"><i class="fas fa-handshake text-brand-teal me-2"></i> @L["Public:Credentials:Partner1:Title"]</h5>
                    <p class="text-muted">@L["Public:Credentials:Partner1:Desc"]</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="industry-card">
                    <h5 class="text-brand-primary mb-3"><i class="fas fa-users text-brand-teal me-2"></i> @L["Public:Credentials:Partner2:Title"]</h5>
                    <p class="text-muted">@L["Public:Credentials:Partner2:Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Case Studies Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-brand-primary">@L["Public:Credentials:CasesTitle"]</h2>
                <p class="text-muted lead">@L["Public:Credentials:CasesDesc"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body">
                        <span class="badge bg-brand-teal mb-2">@L["Public:Credentials:Case1:Badge"]</span>
                        <h5 class="card-title text-brand-primary">@L["Public:Credentials:Case1:Title"]</h5>
                        <p class="card-text text-muted">@L["Public:Credentials:Case1:Desc"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body">
                        <span class="badge bg-brand-teal mb-2">@L["Public:Credentials:Case2:Badge"]</span>
                        <h5 class="card-title text-brand-primary">@L["Public:Credentials:Case2:Title"]</h5>
                        <p class="card-text text-muted">@L["Public:Credentials:Case2:Desc"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body">
                        <span class="badge bg-brand-teal mb-2">@L["Public:Credentials:Case3:Badge"]</span>
                        <h5 class="card-title text-brand-primary">@L["Public:Credentials:Case3:Title"]</h5>
                        <p class="card-text text-muted">@L["Public:Credentials:Case3:Desc"]</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <p class="text-muted">@L["Public:Credentials:CasesMore"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Proof Points Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-brand-primary">@L["Public:Credentials:ProofTitle"]</h2>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-brand-primary display-4">@L["Public:Credentials:Proof1:Value"]</h3>
                    <p class="text-muted">@L["Public:Credentials:Proof1:Label"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-brand-primary display-4">@L["Public:Credentials:Proof2:Value"]</h3>
                    <p class="text-muted">@L["Public:Credentials:Proof2:Label"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-brand-primary display-4">@L["Public:Credentials:Proof3:Value"]</h3>
                    <p class="text-muted">@L["Public:Credentials:Proof3:Label"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-brand-primary display-4">@L["Public:Credentials:Proof4:Value"]</h3>
                    <p class="text-muted">@L["Public:Credentials:Proof4:Label"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-brand-primary">@L["Public:Credentials:CTATitle"]</h2>
        <p class="lead text-muted mb-4">@L["Public:Credentials:CTADesc"]</p>
        <a href="/Public/Contact" class="btn btn-brand-primary btn-lg me-2">
            <i class="fas fa-calendar-alt"></i> @L["Public:Credentials:RequestConsultation"]
        </a>
        <a href="/Public/Contact" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-file-download"></i> @L["Public:Credentials:DownloadProfile"]
        </a>
    </div>
</section>
