@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@model DoganSystem.Modules.TenantManagement.Application.Dtos.CreateTenantDto
@{
    ViewData["Title"] = L["Tenant:Create"];
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2><i class="fas fa-building me-2"></i>@L["Tenant:Create"]</h2>
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">@L["Common:Name"] *</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Subdomain" class="form-label">@L["Tenant:Subdomain"]</label>
                    <input asp-for="Subdomain" class="form-control" />
                    <span asp-validation-for="Subdomain" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Domain" class="form-label">@L["Tenant:Domain"]</label>
                    <input asp-for="Domain" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SubscriptionTier" class="form-label">@L["Tenant:SubscriptionTier"]</label>
                    <select asp-for="SubscriptionTier" class="form-select">
                        <option value="Starter">@L["Tenant:Tier:Starter"]</option>
                        <option value="Professional">@L["Tenant:Tier:Professional"]</option>
                        <option value="Enterprise">@L["Tenant:Tier:Enterprise"]</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TrialDays" class="form-label">@L["Tenant:TrialDays"]</label>
                    <input asp-for="TrialDays" type="number" class="form-control" value="14" />
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>@L["Tenant:Create"]</button>
                    <a href="/Tenants" class="btn btn-secondary">@L["Common:Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
