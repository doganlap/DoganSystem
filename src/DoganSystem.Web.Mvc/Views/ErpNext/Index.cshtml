@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@model List<DoganSystem.Modules.ErpNext.Application.Dtos.ErpNextInstanceDto>
@{
    ViewData["Title"] = L["ErpNext:Title"];
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-cogs me-2"></i>@L["ErpNext:Title"]</h1>
            <p class="text-muted">@L["ErpNext:Description"]</p>
            <button class="btn btn-primary" onclick="showCreateModal()"><i class="fas fa-plus me-1"></i>@L["ErpNext:AddInstance"]</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>@L["Common:Name"]</th>
                                <th>@L["ErpNext:BaseUrl"]</th>
                                <th>@L["ErpNext:SiteName"]</th>
                                <th>@L["Common:Status"]</th>
                                <th>@L["ErpNext:LastSync"]</th>
                                <th>@L["Common:Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var instance in Model)
                            {
                                <tr>
                                    <td>@instance.Name</td>
                                    <td>@instance.BaseUrl</td>
                                    <td>@instance.SiteName</td>
                                    <td>
                                        <span class="badge bg-@(instance.IsActive ? "success" : "secondary")">
                                            @(instance.IsActive ? L["Common:Active"] : L["Common:Inactive"])
                                        </span>
                                    </td>
                                    <td>@(instance.LastSyncTime?.ToString("yyyy-MM-dd HH:mm") ?? L["ErpNext:Never"])</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" onclick="viewInstance('@instance.Id')" title="@L["Common:View"]"><i class="fas fa-eye"></i></button>
                                        <button class="btn btn-sm btn-success" onclick="testConnection('@instance.Id')" title="@L["ErpNext:TestConnection"]"><i class="fas fa-plug"></i></button>
                                        <button class="btn btn-sm btn-danger" onclick="deleteInstance('@instance.Id')" title="@L["Common:Delete"]"><i class="fas fa-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showCreateModal() {
            window.location.href = '/ErpNext/Create';
        }

        function viewInstance(id) {
            window.location.href = `/ErpNext/Details/${id}`;
        }

        async function testConnection(id) {
            const response = await fetch(`/api/erpnext/${id}/test-connection`, { method: 'POST' });
            if (response.ok) {
                alert('@L["ErpNext:ConnectionSuccess"]');
            } else {
                alert('@L["ErpNext:ConnectionFailed"]');
            }
        }

        async function deleteInstance(id) {
            if (confirm('@L["Common:ConfirmDelete"]')) {
                await fetch(`/api/erpnext/${id}`, { method: 'DELETE' });
                location.reload();
            }
        }
    </script>
}
