@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@model DoganSystem.Modules.AgentOrchestrator.Application.Dtos.EmployeeAgentDto
@{
    ViewData["Title"] = L["Agent:DetailsTitle"];
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2><i class="fas fa-user-tie me-2"></i>@L["Agent:EmployeeAgentDetails"]</h2>
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@L["Agent:EmployeeName"]:</dt>
                        <dd class="col-sm-9">@Model.EmployeeName</dd>

                        <dt class="col-sm-3">@L["Common:Role"]:</dt>
                        <dd class="col-sm-9">@Model.Role</dd>

                        <dt class="col-sm-3">@L["Agent:Department"]:</dt>
                        <dd class="col-sm-9">@Model.Department</dd>

                        <dt class="col-sm-3">@L["Common:Status"]:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.Status == "Available" ? "success" : "warning")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-3">@L["Agent:Capabilities"]:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Capabilities != null && Model.Capabilities.Any())
                            {
                                @string.Join(", ", Model.Capabilities)
                            }
                            else
                            {
                                <span class="text-muted">@L["Common:None"]</span>
                            }
                        </dd>

                        <dt class="col-sm-3">@L["Common:Created"]:</dt>
                        <dd class="col-sm-9">@Model.CreationTime.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>

                    <div class="mt-3">
                        <a href="/Agents/Edit/@Model.Id" class="btn btn-warning"><i class="fas fa-edit me-1"></i>@L["Common:Edit"]</a>
                        <a href="/Agents" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i>@L["Common:BackToList"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
