@model DoganSystem.Modules.TenantManagement.Application.Dtos.UpdateTenantDto
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@{
    ViewData["Title"] = L["Tenant:EditTitle"];
    var tenantId = ViewContext.RouteData.Values["id"];
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>@L["Tenant:EditTenant"]</h2>
            <form asp-action="Edit" asp-route-id="@tenantId" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">@L["Common:Name"]</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Domain" class="form-label">@L["Tenant:Domain"]</label>
                    <input asp-for="Domain" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label">@L["Common:Status"]</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Trial">@L["Tenant:StatusTrial"]</option>
                        <option value="Active">@L["Tenant:StatusActive"]</option>
                        <option value="Suspended">@L["Tenant:StatusSuspended"]</option>
                        <option value="Cancelled">@L["Tenant:StatusCancelled"]</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SubscriptionTier" class="form-label">@L["Tenant:SubscriptionTier"]</label>
                    <select asp-for="SubscriptionTier" class="form-select">
                        <option value="Starter">@L["Subscription:TierStarter"]</option>
                        <option value="Professional">@L["Subscription:TierProfessional"]</option>
                        <option value="Enterprise">@L["Subscription:TierEnterprise"]</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">@L["Tenant:UpdateTenant"]</button>
                    <a href="/Tenants" class="btn btn-secondary">@L["Common:Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
