@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@model List<DoganSystem.Modules.Subscription.Application.Dtos.SubscriptionDto>
@{
    ViewData["Title"] = L["Subscription:Title"];
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-credit-card me-2"></i>@L["Subscription:Title"]</h1>
            <p class="text-muted">@L["Subscription:Description"]</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>@L["Subscription:TenantId"]</th>
                                <th>@L["Subscription:PlanType"]</th>
                                <th>@L["Common:Status"]</th>
                                <th>@L["Subscription:MonthlyPrice"]</th>
                                <th>@L["Subscription:StartDate"]</th>
                                <th>@L["Subscription:NextBilling"]</th>
                                <th>@L["Common:Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subscription in Model)
                            {
                                <tr>
                                    <td>@subscription.TenantId</td>
                                    <td>@subscription.PlanType</td>
                                    <td>
                                        <span class="badge bg-@(subscription.Status == "Active" ? "success" : "warning")">
                                            @subscription.Status
                                        </span>
                                    </td>
                                    <td>@subscription.MonthlyPrice.ToString("C")</td>
                                    <td>@subscription.StartDate.ToString("yyyy-MM-dd")</td>
                                    <td>@(subscription.NextBillingDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" onclick="viewSubscription('@subscription.Id')" title="@L["Common:View"]"><i class="fas fa-eye"></i></button>
                                        @if (subscription.Status == "Active")
                                        {
                                            <button class="btn btn-sm btn-warning" onclick="cancelSubscription('@subscription.Id')" title="@L["Subscription:Cancel"]"><i class="fas fa-times"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-success" onclick="renewSubscription('@subscription.Id')" title="@L["Subscription:Renew"]"><i class="fas fa-redo"></i></button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewSubscription(id) {
            window.location.href = `/Subscriptions/Details/${id}`;
        }

        async function cancelSubscription(id) {
            if (confirm('@L["Common:ConfirmCancel"]')) {
                await fetch(`/api/subscriptions/${id}/cancel`, { method: 'POST' });
                location.reload();
            }
        }

        async function renewSubscription(id) {
            await fetch(`/api/subscriptions/${id}/renew`, { method: 'POST' });
            location.reload();
        }
    </script>
}
