@using Microsoft.Extensions.Localization
@using DoganSystem.Localization
@inject IStringLocalizer<GrcResource> L
@{
    ViewData["Title"] = L["Public:Index:Title"];
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-7">
                <h1 class="display-4 fw-bold mb-4 text-white">@L["Public:Index:Headline"]</h1>
                <p class="lead mb-4">@L["Public:Index:Positioning"]</p>
                <p class="mb-4">@L["Public:Index:Description"]</p>
                <div class="mt-4">
                    <a href="/Public/Contact" class="btn btn-light btn-lg me-2">
                        <i class="fas fa-calendar-alt"></i> @L["Public:Index:RequestConsultation"]
                    </a>
                    <a href="/Public/Services" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle"></i> @L["Public:Index:LearnMore"]
                    </a>
                </div>
            </div>
            <div class="col-lg-5 text-center">
                <i class="fas fa-network-wired fa-10x opacity-50"></i>
            </div>
        </div>
    </div>
</section>

<!-- Services Overview Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold text-brand-primary">@L["Public:Index:ServicesTitle"]</h2>
                <p class="text-muted lead">@L["Public:Index:ServicesSubtitle"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-satellite-dish fa-3x text-brand-teal mb-3"></i>
                        <h5 class="card-title text-brand-primary">@L["Public:Index:Service1:Title"]</h5>
                        <p class="card-text">@L["Public:Index:Service1:Desc"]</p>
                        <a href="/Public/Services#telecom" class="btn btn-sm btn-brand-teal mt-2">@L["Public:Index:More"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-server fa-3x text-brand-teal mb-3"></i>
                        <h5 class="card-title text-brand-primary">@L["Public:Index:Service2:Title"]</h5>
                        <p class="card-text">@L["Public:Index:Service2:Desc"]</p>
                        <a href="/Public/Services#datacenter" class="btn btn-sm btn-brand-teal mt-2">@L["Public:Index:More"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-shield-alt fa-3x text-brand-teal mb-3"></i>
                        <h5 class="card-title text-brand-primary">@L["Public:Index:Service3:Title"]</h5>
                        <p class="card-text">@L["Public:Index:Service3:Desc"]</p>
                        <a href="/Public/Services#cybersecurity" class="btn btn-sm btn-brand-teal mt-2">@L["Public:Index:More"]</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-project-diagram fa-3x text-brand-teal mb-3"></i>
                        <h5 class="card-title text-brand-primary">@L["Public:Index:Service4:Title"]</h5>
                        <p class="card-text">@L["Public:Index:Service4:Desc"]</p>
                        <a href="/Public/Services#governance" class="btn btn-sm btn-brand-teal mt-2">@L["Public:Index:More"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Industries Section -->
<section class="industry-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold text-brand-primary">@L["Public:Index:IndustriesTitle"]</h2>
                <p class="text-muted lead">@L["Public:Index:IndustriesSubtitle"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="industry-card text-center">
                    <i class="fas fa-landmark fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Index:Industry1:Title"]</h5>
                    <p class="text-muted">@L["Public:Index:Industry1:Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="industry-card text-center">
                    <i class="fas fa-broadcast-tower fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Index:Industry2:Title"]</h5>
                    <p class="text-muted">@L["Public:Index:Industry2:Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="industry-card text-center">
                    <i class="fas fa-bolt fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Index:Industry3:Title"]</h5>
                    <p class="text-muted">@L["Public:Index:Industry3:Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="industry-card text-center">
                    <i class="fas fa-building fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Index:Industry4:Title"]</h5>
                    <p class="text-muted">@L["Public:Index:Industry4:Desc"]</p>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="/Public/Industries" class="btn btn-brand-primary btn-lg">
                    <i class="fas fa-arrow-right"></i> @L["Public:Index:IndustriesLearnMore"]
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold text-brand-primary">@L["Public:Index:WhyUs"]</h2>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-certificate fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Index:Why1:Title"]</h5>
                    <p class="text-muted">@L["Public:Index:Why1:Desc"]</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-shield-alt fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Index:Why2:Title"]</h5>
                    <p class="text-muted">@L["Public:Index:Why2:Desc"]</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-handshake fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Index:Why3:Title"]</h5>
                    <p class="text-muted">@L["Public:Index:Why3:Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-brand-primary">@L["Public:Index:CTATitle"]</h2>
        <p class="lead text-muted mb-4">@L["Public:Index:CTADesc"]</p>
        <a href="/Public/Contact" class="btn btn-brand-primary btn-lg me-2">
            <i class="fas fa-calendar-alt"></i> @L["Public:Index:RequestConsultation"]
        </a>
        <a href="/Public/Credentials" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-file-alt"></i> @L["Public:Index:DownloadProfile"]
        </a>
    </div>
</section>
