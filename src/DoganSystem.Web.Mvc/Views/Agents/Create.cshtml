@model DoganSystem.Modules.AgentOrchestrator.Application.Dtos.CreateEmployeeAgentDto
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@{
    ViewData["Title"] = L["Agent:CreateAgent"];
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>@L["Agent:CreateAgent"]</h2>
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="TenantId" class="form-label">@L["Tenant:TenantId"] *</label>
                    <input asp-for="TenantId" type="text" class="form-control" required />
                    <span asp-validation-for="TenantId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EmployeeName" class="form-label">@L["Agent:EmployeeName"] *</label>
                    <input asp-for="EmployeeName" class="form-control" required />
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label">@L["Agent:Role"] *</label>
                    <input asp-for="Role" class="form-control" required />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Department" class="form-label">@L["Agent:Department"]</label>
                    <input asp-for="Department" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">@L["Agent:Capabilities"]</label>
                    <input type="text" class="form-control" id="capabilitiesInput" placeholder="@L["Agent:CapabilitiesPlaceholder"]" />
                    <small class="form-text text-muted">@L["Agent:CapabilitiesHint"]</small>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">@L["Agent:CreateAgent"]</button>
                    <a href="/Agents" class="btn btn-secondary">@L["Common:Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const capabilitiesInput = document.getElementById('capabilitiesInput');
            const capabilities = capabilitiesInput.value.split(',').map(c => c.trim()).filter(c => c);
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'Capabilities';
            hiddenInput.value = JSON.stringify(capabilities);
            this.appendChild(hiddenInput);
        });
    </script>
}
