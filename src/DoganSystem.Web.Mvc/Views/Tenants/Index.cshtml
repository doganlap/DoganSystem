@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@model List<DoganSystem.Modules.TenantManagement.Application.Dtos.TenantDto>
@{
    ViewData["Title"] = L["Tenant:Title"];
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-building me-2"></i>@L["Tenant:Title"]</h1>
            <button class="btn btn-primary" onclick="showCreateModal()"><i class="fas fa-plus me-1"></i>@L["Tenant:New"]</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover" id="tenantsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>@L["Common:Name"]</th>
                                <th>@L["Tenant:Subdomain"]</th>
                                <th>@L["Common:Status"]</th>
                                <th>@L["Tenant:SubscriptionTier"]</th>
                                <th>@L["Common:Date"]</th>
                                <th>@L["Common:Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tenant in Model)
                            {
                                <tr>
                                    <td>@tenant.Name</td>
                                    <td>@tenant.Subdomain</td>
                                    <td>
                                        <span class="badge bg-@(tenant.Status == "Active" ? "success" : "warning")">
                                            @tenant.Status
                                        </span>
                                    </td>
                                    <td>@tenant.SubscriptionTier</td>
                                    <td>@tenant.CreationTime.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <button class="btn btn-sm btn-info" onclick="viewTenant('@tenant.Id')">@L["Common:View"]</button>
                                        <button class="btn btn-sm btn-warning" onclick="editTenant('@tenant.Id')">@L["Common:Edit"]</button>
                                        @if (tenant.Status != "Active")
                                        {
                                            <button class="btn btn-sm btn-success" onclick="activateTenant('@tenant.Id')">@L["Tenant:Activate"]</button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-secondary" onclick="suspendTenant('@tenant.Id')">@L["Tenant:Suspend"]</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function loadTenants() {
            const response = await fetch('/api/tenants');
            const data = await response.json();
        }

        function showCreateModal() {
            window.location.href = '/Tenants/Create';
        }

        function viewTenant(id) {
            window.location.href = `/Tenants/Details/${id}`;
        }

        function editTenant(id) {
            window.location.href = `/Tenants/Edit/${id}`;
        }

        async function activateTenant(id) {
            await fetch(`/api/tenants/${id}/activate`, { method: 'POST' });
            location.reload();
        }

        async function suspendTenant(id) {
            await fetch(`/api/tenants/${id}/suspend`, { method: 'POST' });
            location.reload();
        }
    </script>
}
