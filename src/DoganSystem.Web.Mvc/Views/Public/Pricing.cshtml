@using Microsoft.Extensions.Localization
@using DoganSystem.Localization
@inject IStringLocalizer<GrcResource> L
@{
    ViewData["Title"] = L["Public:Pricing:Title"];
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-4">@L["Public:Pricing:Headline"]</h1>
                <p class="lead">@L["Public:Pricing:Subtitle"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Custom Solutions Section -->
<section class="pricing-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold text-brand-primary">@L["Public:Pricing:CustomTitle"]</h2>
                <p class="text-muted lead">@L["Public:Pricing:CustomDesc"]</p>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5 text-center">
                        <i class="fas fa-handshake fa-4x text-brand-teal mb-4"></i>
                        <h3 class="text-brand-primary mb-4">@L["Public:Pricing:CustomBoxTitle"]</h3>
                        <p class="lead text-muted mb-4">
                            @L["Public:Pricing:CustomBoxDesc1"]
                        </p>
                        <p class="text-muted mb-4">
                            @L["Public:Pricing:CustomBoxDesc2"]
                        </p>
                        <a href="/Public/Contact" class="btn btn-brand-primary btn-lg me-2">
                            <i class="fas fa-calendar-alt"></i> @L["Public:Pricing:RequestConsultation"]
                        </a>
                        <a href="/Public/Contact" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-file-download"></i> @L["Public:Pricing:RequestQuote"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Service Packages Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-brand-primary">@L["Public:Pricing:ModelsTitle"]</h2>
                <p class="text-muted lead">@L["Public:Pricing:ModelsDesc"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-brand-primary text-white text-center py-4">
                        <h4 class="mb-2">@L["Public:Pricing:Plan1:Title"]</h4>
                    </div>
                    <div class="card-body p-4">
                        <ul class="list-unstyled mb-4">
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan1:F1"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan1:F2"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan1:F3"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan1:F4"]</li>
                        </ul>
                        <a href="/Public/Contact" class="btn btn-brand-primary w-100">
                            <i class="fas fa-arrow-left"></i> @L["Public:Pricing:RequestQuote"]
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-lg border-brand-teal border-2">
                    <div class="card-header bg-brand-teal text-white text-center py-4 position-relative">
                        <span class="badge bg-light text-dark position-absolute top-0 start-50 translate-middle px-3 py-2">@L["Public:Pricing:Plan2:Badge"]</span>
                        <h4 class="mb-2 mt-3">@L["Public:Pricing:Plan2:Title"]</h4>
                    </div>
                    <div class="card-body p-4">
                        <ul class="list-unstyled mb-4">
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan2:F1"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan2:F2"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan2:F3"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan2:F4"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan2:F5"]</li>
                        </ul>
                        <a href="/Public/Contact" class="btn btn-brand-teal w-100">
                            <i class="fas fa-arrow-left"></i> @L["Public:Pricing:RequestQuote"]
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-dark text-white text-center py-4">
                        <h4 class="mb-2">@L["Public:Pricing:Plan3:Title"]</h4>
                    </div>
                    <div class="card-body p-4">
                        <ul class="list-unstyled mb-4">
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan3:F1"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan3:F2"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan3:F3"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan3:F4"]</li>
                            <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Pricing:Plan3:F5"]</li>
                        </ul>
                        <a href="/Public/Contact" class="btn btn-dark w-100">
                            <i class="fas fa-phone"></i> @L["Public:Pricing:ContactUs"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12 text-center">
                <p class="text-muted">@L["Public:Pricing:CustomNote"]</p>
                <a href="/Public/Contact" class="btn btn-outline-primary">
                    <i class="fas fa-question-circle"></i> @L["Public:Pricing:QuestionsBtn"]
                </a>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-brand-primary">@L["Public:Pricing:CTATitle"]</h2>
        <p class="lead text-muted mb-4">@L["Public:Pricing:CTADesc"]</p>
        <a href="/Public/Contact" class="btn btn-brand-primary btn-lg me-2">
            <i class="fas fa-calendar-alt"></i> @L["Public:Pricing:RequestConsultation"]
        </a>
        <a href="/Public/Contact" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-file-download"></i> @L["Public:Pricing:RequestQuote"]
        </a>
    </div>
</section>
