@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@model DoganSystem.Modules.ErpNext.Application.Dtos.ErpNextInstanceDto
@{
    ViewData["Title"] = L["ErpNext:InstanceDetails"];
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/ErpNext">@L["ErpNext:Instances"]</a></li>
                    <li class="breadcrumb-item active">@Model.Name</li>
                </ol>
            </nav>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-server me-2"></i>@Model.Name</h4>
                    <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                        @(Model.IsActive ? L["Common:Active"] : L["Common:Inactive"])
                    </span>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@L["ErpNext:BaseUrl"]:</dt>
                        <dd class="col-sm-9">
                            <a href="@Model.BaseUrl" target="_blank">@Model.BaseUrl</a>
                        </dd>

                        <dt class="col-sm-3">@L["ErpNext:SiteName"]:</dt>
                        <dd class="col-sm-9">@(Model.SiteName ?? "-")</dd>

                        <dt class="col-sm-3">@L["ErpNext:ApiKey"]:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.ApiKey))
                            {
                                <span class="text-muted">****@Model.ApiKey.Substring(Math.Max(0, Model.ApiKey.Length - 4))</span>
                            }
                            else
                            {
                                <span class="text-muted">@L["ErpNext:NotConfigured"]</span>
                            }
                        </dd>

                        <dt class="col-sm-3">@L["ErpNext:LastSync"]:</dt>
                        <dd class="col-sm-9">
                            @if (Model.LastSyncTime.HasValue)
                            {
                                <span>@Model.LastSyncTime.Value.ToString("yyyy-MM-dd HH:mm:ss")</span>
                            }
                            else
                            {
                                <span class="text-muted">@L["ErpNext:NeverSynced"]</span>
                            }
                        </dd>

                        <dt class="col-sm-3">@L["Common:Created"]:</dt>
                        <dd class="col-sm-9">@Model.CreationTime.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-3">@L["Common:Description"]:</dt>
                        <dd class="col-sm-9">@(Model.Description ?? "-")</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <form asp-controller="ErpNext" asp-action="TestConnection" asp-route-id="@Model.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-plug"></i> @L["ErpNext:TestConnection"]
                                </button>
                            </form>
                            <a href="/ErpNext/Edit/@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> @L["Common:Edit"]
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> @L["Common:Delete"]
                            </button>
                        </div>
                        <div>
                            <a href="/ErpNext" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> @L["Common:BackToList"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@L["Common:ConfirmDelete"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@L["ErpNext:DeleteConfirmMessage"] <strong>@Model.Name</strong>?</p>
                <p class="text-danger">@L["Common:ActionCannotBeUndone"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@L["Common:Cancel"]</button>
                <form asp-controller="ErpNext" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">@L["Common:Delete"]</button>
                </form>
            </div>
        </div>
    </div>
</div>
