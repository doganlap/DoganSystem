                        <i class="fas fa-calendar-alt me-2"></i> @L["Home:RequestConsultation"]
                    </a>
                    <a href="/Public/Services" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-arrow-right me-2"></i> @L["Home:ExploreServices"]
                    </a>
                </div>
                <div class="mt-5 d-flex flex-wrap gap-4 align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-white me-2"></i>
                        <span class="text-white opacity-75">@L["Home:Cert:ISO27001"]</span>
