@model DoganSystem.Modules.AgentOrchestrator.Application.Dtos.UpdateEmployeeAgentDto
@{
    ViewData["Title"] = "Edit Agent";
    var agentId = ViewContext.RouteData.Values["id"];
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Edit Employee Agent</h2>
            <form asp-action="Edit" asp-route-id="@agentId" method="post">
                <div class="form-group mb-3">
                    <label asp-for="EmployeeName" class="form-label">Employee Name</label>
                    <input asp-for="EmployeeName" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label">Role</label>
                    <input asp-for="Role" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Department" class="form-label">Department</label>
                    <input asp-for="Department" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Available">Available</option>
                        <option value="Busy">Busy</option>
                        <option value="Away">Away</option>
                        <option value="Offline">Offline</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Update Agent</button>
                    <a href="/Agents" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
