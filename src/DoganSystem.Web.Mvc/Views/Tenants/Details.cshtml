@model DoganSystem.Modules.TenantManagement.Application.Dtos.TenantDto
@{
    ViewData["Title"] = "Tenant Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Tenant Details</h2>
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Subdomain:</dt>
                        <dd class="col-sm-9">@Model.Subdomain</dd>

                        <dt class="col-sm-3">Domain:</dt>
                        <dd class="col-sm-9">@Model.Domain</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.Status == "Active" ? "success" : "warning")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-3">Subscription Tier:</dt>
                        <dd class="col-sm-9">@Model.SubscriptionTier</dd>

                        <dt class="col-sm-3">Trial End Date:</dt>
                        <dd class="col-sm-9">@(Model.TrialEndDate?.ToString("yyyy-MM-dd") ?? "N/A")</dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.CreationTime.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>

                    <div class="mt-3">
                        <a href="/Tenants/Edit/@Model.Id" class="btn btn-warning">Edit</a>
                        <a href="/Tenants" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
