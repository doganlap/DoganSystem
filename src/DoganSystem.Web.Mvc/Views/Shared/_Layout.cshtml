@using System.Globalization
@using Microsoft.Extensions.Configuration
@inject Microsoft.Extensions.Localization.IStringLocalizer<DoganSystem.Localization.GrcResource> L
@inject IConfiguration Configuration
@{
    var currentCulture = CultureInfo.CurrentUICulture.Name;
    var isRtl = currentCulture.StartsWith("ar");
    var direction = isRtl ? "rtl" : "ltr";
    var bootstrapCss = isRtl
        ? "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css"
        : "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css";
    var textAlign = isRtl ? "text-end" : "text-start";
    var navbarAlign = isRtl ? "ms-auto" : "me-auto";

    // Read supported languages from configuration (no hardcoding)
    var supportedLanguages = Configuration.GetSection("Abp:Localization:SupportedLanguages").Get<string[]>()
        ?? new[] { "ar", "en" };
    var languageDisplayNames = new Dictionary<string, string>
    {
        { "ar", "العربية" },
        { "en", "English" },
        { "fr", "Français" },
        { "de", "Deutsch" },
        { "es", "Español" },
        { "tr", "Türkçe" },
        { "zh", "中文" },
        { "ja", "日本語" }
    };
}
<!DOCTYPE html>
<html lang="@currentCulture" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @L["Brand:System"]</title>
    <link href="@bootstrapCss" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @if (isRtl)
    {
        <style>
            body { font-family: 'Segoe UI', Tahoma, 'Noto Sans Arabic', sans-serif; }
            .dropdown-menu { text-align: right; }
            .navbar-nav { flex-direction: row-reverse; }
        </style>
    }
</head>
<body dir="@direction">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-shield-alt me-2"></i>@L["Brand:System"]
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav @navbarAlign">
                        <li class="nav-item">
                            <a class="nav-link" href="/"><i class="fas fa-home me-1"></i>@L["Menu:Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard"><i class="fas fa-tachometer-alt me-1"></i>@L["Menu:Dashboard"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/subscriptions"><i class="fas fa-credit-card me-1"></i>@L["Menu:Subscriptions"]</a>
                        </li>
                        <!-- Admin Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cog me-1"></i>@L["Menu:Admin"]
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/admin/users"><i class="fas fa-users me-2"></i>@L["Menu:Users"]</a></li>
                                <li><a class="dropdown-item" href="/admin/roles"><i class="fas fa-user-tag me-2"></i>@L["Menu:Roles"]</a></li>
                                <li><a class="dropdown-item" href="/admin/tenants"><i class="fas fa-building me-2"></i>@L["Menu:Tenants"]</a></li>
                            </ul>
                        </li>
                        <!-- GRC Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="grcDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-shield-alt me-1"></i>@L["GRC:Title"]
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/frameworks"><i class="fas fa-sitemap me-2"></i>@L["Menu:Frameworks"]</a></li>
                                <li><a class="dropdown-item" href="/regulators"><i class="fas fa-university me-2"></i>@L["Menu:Regulators"]</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/assessments"><i class="fas fa-clipboard-check me-2"></i>@L["Menu:Assessments"]</a></li>
                                <li><a class="dropdown-item" href="/control-assessments"><i class="fas fa-tasks me-2"></i>@L["Menu:ControlAssessments"]</a></li>
                                <li><a class="dropdown-item" href="/evidence"><i class="fas fa-file-alt me-2"></i>@L["Menu:Evidence"]</a></li>
                            </ul>
                        </li>
                        <!-- Risk & Audit -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="riskDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-exclamation-triangle me-1"></i>@L["Risk:Title"]
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/risks"><i class="fas fa-chart-line me-2"></i>@L["Menu:Risks"]</a></li>
                                <li><a class="dropdown-item" href="/audits"><i class="fas fa-search me-2"></i>@L["Menu:Audits"]</a></li>
                                <li><a class="dropdown-item" href="/policies"><i class="fas fa-file-contract me-2"></i>@L["Menu:Policies"]</a></li>
                            </ul>
                        </li>
                        <!-- Operations -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="opsDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cogs me-1"></i>@L["Common:Actions"]
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/action-plans"><i class="fas fa-list-check me-2"></i>@L["Menu:ActionPlans"]</a></li>
                                <li><a class="dropdown-item" href="/compliance-calendar"><i class="fas fa-calendar me-2"></i>@L["Menu:ComplianceCalendar"]</a></li>
                                <li><a class="dropdown-item" href="/workflow"><i class="fas fa-project-diagram me-2"></i>@L["Menu:Workflow"]</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/notifications"><i class="fas fa-bell me-2"></i>@L["Menu:Notifications"]</a></li>
                                <li><a class="dropdown-item" href="/vendors"><i class="fas fa-handshake me-2"></i>@L["Menu:Vendors"]</a></li>
                            </ul>
                        </li>
                        <!-- Reports & Integration -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-chart-bar me-1"></i>@L["Menu:Reports"]
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/reports"><i class="fas fa-file-pdf me-2"></i>@L["Report:Analytics"]</a></li>
                                <li><a class="dropdown-item" href="/integrations"><i class="fas fa-plug me-2"></i>@L["Menu:Integrations"]</a></li>
                                <li><a class="dropdown-item" href="/erpnext"><i class="fas fa-boxes me-2"></i>@L["Menu:ErpNext"]</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/swagger" target="_blank"><i class="fas fa-code me-2"></i>API Docs</a></li>
                            </ul>
                        </li>
                    </ul>
                    <!-- Language Switcher (dynamic from configuration) -->
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-globe me-1"></i>@(languageDisplayNames.GetValueOrDefault(currentCulture.Split('-')[0], currentCulture))
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @foreach (var lang in supportedLanguages)
                                {
                                    var displayName = languageDisplayNames.GetValueOrDefault(lang, lang);
                                    var isActive = currentCulture.StartsWith(lang);
                                    <li><a class="dropdown-item @(isActive ? "active" : "")" href="?culture=@lang">@displayName</a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/account/logout"><i class="fas fa-sign-out-alt me-1"></i>@L["Menu:Logout"]</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted py-3 bg-light">
        <div class="container text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year - @L["Brand:Name"] - @L["Brand:Tagline"]</p>
            <small>@L["Footer:Rights"]</small>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
