@model DoganSystem.Modules.AgentOrchestrator.Application.Dtos.EmployeeAgentDto
@{
    ViewData["Title"] = "Agent Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Employee Agent Details</h2>
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Employee Name:</dt>
                        <dd class="col-sm-9">@Model.EmployeeName</dd>

                        <dt class="col-sm-3">Role:</dt>
                        <dd class="col-sm-9">@Model.Role</dd>

                        <dt class="col-sm-3">Department:</dt>
                        <dd class="col-sm-9">@Model.Department</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.Status == "Available" ? "success" : "warning")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-3">Capabilities:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Capabilities != null && Model.Capabilities.Any())
                            {
                                @string.Join(", ", Model.Capabilities)
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.CreationTime.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>

                    <div class="mt-3">
                        <a href="/Agents/Edit/@Model.Id" class="btn btn-warning">Edit</a>
                        <a href="/Agents" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
