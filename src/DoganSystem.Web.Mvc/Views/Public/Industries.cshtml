<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-brand-primary">@L["Public:Industries:CTATitle"]</h2>
        <p class="lead text-muted mb-4">@L["Public:Industries:CTADesc"]</p>
        <a href="/Public/Contact" class="btn btn-brand-primary btn-lg me-2">
            <i class="fas fa-calendar-alt"></i> @L["Public:Services:RequestConsultation"]
