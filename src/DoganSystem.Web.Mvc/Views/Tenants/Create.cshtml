@model DoganSystem.Modules.TenantManagement.Application.Dtos.CreateTenantDto
@{
    ViewData["Title"] = "Create Tenant";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Create New Tenant</h2>
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Name *</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Subdomain" class="form-label">Subdomain</label>
                    <input asp-for="Subdomain" class="form-control" />
                    <span asp-validation-for="Subdomain" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Domain" class="form-label">Domain</label>
                    <input asp-for="Domain" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SubscriptionTier" class="form-label">Subscription Tier</label>
                    <select asp-for="SubscriptionTier" class="form-select">
                        <option value="Starter">Starter</option>
                        <option value="Professional">Professional</option>
                        <option value="Enterprise">Enterprise</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TrialDays" class="form-label">Trial Days</label>
                    <input asp-for="TrialDays" type="number" class="form-control" value="14" />
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Create Tenant</button>
                    <a href="/Tenants" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
