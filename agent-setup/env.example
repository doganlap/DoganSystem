# ERPNext Configuration
ERPNEXT_BASE_URL=http://localhost:8000
ERPNEXT_API_KEY=your_api_key_here
ERPNEXT_API_SECRET=your_api_secret_here

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8001

# Agent Configuration
MAX_AGENTS=10
RATE_LIMIT_PER_AGENT=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_AGENT_ACTIONS=true

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Multi-Tenancy Configuration
PLATFORM_DB_PATH=platform.db
TENANT_DB_DIR=tenant_databases
TENANT_DATABASE_PREFIX=dogan_tenant_
DEFAULT_TENANT_DB=sqlite
TENANT_ISOLATION_MODE=database

# Billing Configuration
BILLING_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
USAGE_TRACKING_ENABLED=true

# SaaS Settings
TRIAL_PERIOD_DAYS=14
DEFAULT_PLAN=starter

# Unified Orchestrator Settings
ENABLE_MULTI_TENANT=true
ENABLE_AUTONOMOUS_WORKFLOWS=true
ENABLE_SELF_HEALING=true
ENABLE_EMAIL_PROCESSING=true
ENABLE_EMPLOYEE_AGENTS=true
ENABLE_KSA_LOCALIZATION=true
ENABLE_MONITORING=true
AUTO_PROVISION_NEW_TENANTS=true

# API Gateway
API_GATEWAY_PORT=8006
