@using Microsoft.Extensions.Localization
@using DoganSystem.Localization
@inject IStringLocalizer<GrcResource> L
@{
    ViewData["Title"] = L["Public:Industries:Title"];
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-4">@L["Public:Industries:Headline"]</h1>
                <p class="lead">@L["Public:Industries:Subtitle"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Government & Public Sector -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <i class="fas fa-landmark fa-5x text-brand-teal mb-4"></i>
                <h2 class="text-brand-primary mb-4">@L["Public:Industries:Gov:Title"]</h2>
                <p class="lead mb-4">
                    @L["Public:Industries:Gov:Desc"]
                </p>
                <h5 class="text-brand-primary mb-3">@L["Public:Industries:KeyPoints"]</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Industries:Gov:Point1"]</li>
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Industries:Gov:Point2"]</li>
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Industries:Gov:Point3"]</li>
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Industries:Gov:Point4"]</li>
                </ul>
            </div>
            <div class="col-lg-6">
                <div class="industry-card p-4">
                    <h5 class="text-brand-primary mb-3">@L["Public:Industries:Experience"]</h5>
                    <p class="text-muted mb-3">
                        @L["Public:Industries:Gov:ExpDesc"]
                    </p>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-arrow-left text-brand-teal me-2"></i> @L["Public:Industries:Gov:Exp1"]</li>
                        <li class="mb-2"><i class="fas fa-arrow-left text-brand-teal me-2"></i> @L["Public:Industries:Gov:Exp2"]</li>
                        <li class="mb-2"><i class="fas fa-arrow-left text-brand-teal me-2"></i> @L["Public:Industries:Gov:Exp3"]</li>
                        <li class="mb-2"><i class="fas fa-arrow-left text-brand-teal me-2"></i> @L["Public:Industries:Gov:Exp4"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

