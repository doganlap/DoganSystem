@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@model List<DoganSystem.Modules.AgentOrchestrator.Application.Dtos.EmployeeAgentDto>
@{
    ViewData["Title"] = L["Agent:Title"];
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-user-tie me-2"></i>@L["Agent:Title"]</h1>
            <p class="text-muted">@L["Agent:Description"]</p>
            <button class="btn btn-primary" onclick="showCreateModal()"><i class="fas fa-plus me-1"></i>@L["Agent:New"]</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>@L["Common:Name"]</th>
                                <th>@L["Agent:Role"]</th>
                                <th>@L["Agent:Department"]</th>
                                <th>@L["Common:Status"]</th>
                                <th>@L["Agent:Capabilities"]</th>
                                <th>@L["Common:Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agent in Model)
                            {
                                <tr>
                                    <td>@agent.EmployeeName</td>
                                    <td>@agent.Role</td>
                                    <td>@agent.Department</td>
                                    <td>
                                        <span class="badge bg-@(agent.Status == "Available" ? "success" : "warning")">
                                            @agent.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (agent.Capabilities != null)
                                        {
                                            @string.Join(", ", agent.Capabilities)
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-info" onclick="viewAgent('@agent.Id')" title="@L["Common:View"]"><i class="fas fa-eye"></i></button>
                                        <button class="btn btn-sm btn-warning" onclick="editAgent('@agent.Id')" title="@L["Common:Edit"]"><i class="fas fa-edit"></i></button>
                                        <button class="btn btn-sm btn-danger" onclick="deleteAgent('@agent.Id')" title="@L["Common:Delete"]"><i class="fas fa-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showCreateModal() {
            window.location.href = '/Agents/Create';
        }

        function viewAgent(id) {
            window.location.href = `/Agents/Details/${id}`;
        }

        function editAgent(id) {
            window.location.href = `/Agents/Edit/${id}`;
        }

        async function deleteAgent(id) {
            if (confirm('@L["Common:ConfirmDelete"]')) {
                await fetch(`/api/agents/${id}`, { method: 'DELETE' });
                location.reload();
            }
        }
    </script>
}
