@using Microsoft.Extensions.Localization
@using DoganSystem.Localization
@inject IStringLocalizer<GrcResource> L
@{
    ViewData["Title"] = L["Public:Features:Title"];
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-4">@L["Public:Features:Headline"]</h1>
                <p class="lead">@L["Public:Features:Subtitle"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Engineering Expertise Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-brand-primary">@L["Public:Features:ExpertiseTitle"]</h2>
                <p class="text-muted lead">@L["Public:Features:ExpertiseDesc"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-drafting-compass fa-3x text-brand-teal mb-3"></i>
                        <h5 class="card-title text-brand-primary">@L["Public:Features:Exp1:Title"]</h5>
                        <p class="card-text">@L["Public:Features:Exp1:Desc"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-tools fa-3x text-brand-teal mb-3"></i>
                        <h5 class="card-title text-brand-primary">@L["Public:Features:Exp2:Title"]</h5>
                        <p class="card-text">@L["Public:Features:Exp2:Desc"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm service-card">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-chart-line fa-3x text-brand-teal mb-3"></i>
                        <h5 class="card-title text-brand-primary">@L["Public:Features:Exp3:Title"]</h5>
                        <p class="card-text">@L["Public:Features:Exp3:Desc"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Security & Compliance Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-brand-primary">@L["Public:Features:SecurityTitle"]</h2>
                <p class="text-muted lead">@L["Public:Features:SecurityDesc"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="industry-card">
                    <h5 class="text-brand-primary mb-3"><i class="fas fa-shield-check text-brand-teal me-2"></i> @L["Public:Features:Sec1:Title"]</h5>
                    <p class="text-muted">@L["Public:Features:Sec1:Desc"]</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="industry-card">
                    <h5 class="text-brand-primary mb-3"><i class="fas fa-certificate text-brand-teal me-2"></i> @L["Public:Features:Sec2:Title"]</h5>
                    <p class="text-muted">@L["Public:Features:Sec2:Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Project Delivery Excellence Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="text-brand-primary">@L["Public:Features:DeliveryTitle"]</h2>
                <p class="text-muted lead">@L["Public:Features:DeliveryDesc"]</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-clock fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Features:Del1:Title"]</h5>
                    <p class="text-muted">@L["Public:Features:Del1:Desc"]</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-award fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Features:Del2:Title"]</h5>
                    <p class="text-muted">@L["Public:Features:Del2:Desc"]</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-handshake fa-3x text-brand-teal mb-3"></i>
                    <h5 class="text-brand-primary">@L["Public:Features:Del3:Title"]</h5>
                    <p class="text-muted">@L["Public:Features:Del3:Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-brand-primary">@L["Public:Features:CTATitle"]</h2>
        <p class="lead text-muted mb-4">@L["Public:Features:CTADesc"]</p>
        <a href="/Public/Contact" class="btn btn-brand-primary btn-lg me-2">
            <i class="fas fa-calendar-alt"></i> @L["Public:Services:RequestConsultation"]
        </a>
        <a href="/Public/Credentials" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-file-alt"></i> @L["Public:Services:LearnMoreExpertise"]
        </a>
    </div>
</section>
