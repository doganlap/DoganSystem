###############################################
# DoganSystem Production Environment Variables
# Copy this to .env and fill in your values
###############################################

#==============================================
# CRITICAL: Claude AI Configuration
# Get your API key from: https://console.anthropic.com/
#==============================================
CLAUDE_API_KEY=YOUR_ANTHROPIC_API_KEY
CLAUDE_MODEL=claude-sonnet-4-20250514

#==============================================
# CRITICAL: ERPNext v16.2 Configuration
# API keys will be generated after first login
#==============================================
ERPNEXT_BASE_URL=http://erpnext:8000
ERPNEXT_API_KEY=REPLACE_AFTER_SETUP
ERPNEXT_API_SECRET=REPLACE_AFTER_SETUP
ERPNEXT_TIMEOUT=30
ERPNEXT_ADMIN_PASSWORD=REPLACE_WITH_STRONG_PASSWORD_MIN_16_CHARS
MYSQL_ROOT_PASSWORD=REPLACE_WITH_STRONG_PASSWORD_MIN_16_CHARS
MYSQL_PASSWORD=REPLACE_WITH_STRONG_PASSWORD_MIN_16_CHARS

#==============================================
# Email Configuration (for AI agent notifications)
#==============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

#==============================================
# Agent Configuration
#==============================================
MAX_AGENTS=10
RATE_LIMIT_PER_AGENT=100
RATE_LIMIT_WINDOW=60

#==============================================
# AI Features Toggle
#==============================================
ENABLE_AUTONOMOUS_WORKFLOWS=true
ENABLE_SELF_HEALING=true
ENABLE_EMAIL_PROCESSING=true
ENABLE_EMPLOYEE_AGENTS=true
ENABLE_MULTI_TENANT=true
ENABLE_KSA_LOCALIZATION=true
ENABLE_MONITORING=true
AUTO_PROVISION_NEW_TENANTS=true

#==============================================
# Database Configuration
#==============================================
PLATFORM_DB_PATH=/app/data/platform.db
TENANT_DB_DIR=/app/data/tenant_databases

#==============================================
# Redis Configuration
#==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_STRONG_PASSWORD_MIN_16_CHARS

#==============================================
# Billing Configuration (Optional - for SaaS)
#==============================================
BILLING_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_YOUR_STRIPE_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_WEBHOOK_SECRET
USAGE_TRACKING_ENABLED=true

#==============================================
# SaaS Settings
#==============================================
TRIAL_PERIOD_DAYS=14
DEFAULT_PLAN=starter

#==============================================
# Logging
#==============================================
LOG_LEVEL=INFO
LOG_AGENT_ACTIONS=true

#==============================================
# Monitoring (Grafana)
#==============================================
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_STRONG_PASSWORD_MIN_16_CHARS

#==============================================
# SSL/TLS (for nginx)
#==============================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/fullchain.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/privkey.pem
DOMAIN_NAME=saudibusinessgate.com

#==============================================
# Application URLs (update for your domain)
#==============================================
APP_SELF_URL=https://saudibusinessgate.com
CORS_ORIGINS=https://saudibusinessgate.com,https://www.saudibusinessgate.com,https://api.saudibusinessgate.com,https://ai.saudibusinessgate.com,https://ds.saudibusinessgate.com
