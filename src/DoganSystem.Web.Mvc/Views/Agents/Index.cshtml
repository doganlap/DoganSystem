@model List<DoganSystem.Modules.AgentOrchestrator.Application.Dtos.EmployeeAgentDto>
@{
    ViewData["Title"] = "Employee Agents";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Employee Agents</h1>
            <button class="btn btn-primary" onclick="showCreateModal()">Create New Agent</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Employee Name</th>
                                <th>Role</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Capabilities</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var agent in Model)
                            {
                                <tr>
                                    <td>@agent.EmployeeName</td>
                                    <td>@agent.Role</td>
                                    <td>@agent.Department</td>
                                    <td>
                                        <span class="badge bg-@(agent.Status == "Available" ? "success" : "warning")">
                                            @agent.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (agent.Capabilities != null)
                                        {
                                            @string.Join(", ", agent.Capabilities)
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-info" onclick="viewAgent('@agent.Id')">View</button>
                                        <button class="btn btn-sm btn-warning" onclick="editAgent('@agent.Id')">Edit</button>
                                        <button class="btn btn-sm btn-danger" onclick="deleteAgent('@agent.Id')">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showCreateModal() {
            window.location.href = '/Agents/Create';
        }

        function viewAgent(id) {
            window.location.href = `/Agents/Details/${id}`;
        }

        function editAgent(id) {
            window.location.href = `/Agents/Edit/${id}`;
        }

        async function deleteAgent(id) {
            if (confirm('Are you sure you want to delete this agent?')) {
                await fetch(`/api/agents/${id}`, { method: 'DELETE' });
                location.reload();
            }
        }
    </script>
}
