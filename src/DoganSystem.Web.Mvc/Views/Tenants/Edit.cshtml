@model DoganSystem.Modules.TenantManagement.Application.Dtos.UpdateTenantDto
@{
    ViewData["Title"] = "Edit Tenant";
    var tenantId = ViewContext.RouteData.Values["id"];
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Edit Tenant</h2>
            <form asp-action="Edit" asp-route-id="@tenantId" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Domain" class="form-label">Domain</label>
                    <input asp-for="Domain" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Trial">Trial</option>
                        <option value="Active">Active</option>
                        <option value="Suspended">Suspended</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SubscriptionTier" class="form-label">Subscription Tier</label>
                    <select asp-for="SubscriptionTier" class="form-select">
                        <option value="Starter">Starter</option>
                        <option value="Professional">Professional</option>
                        <option value="Enterprise">Enterprise</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Update Tenant</button>
                    <a href="/Tenants" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
