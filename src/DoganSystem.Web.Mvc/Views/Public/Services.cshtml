@using Microsoft.Extensions.Localization
@using DoganSystem.Localization
@inject IStringLocalizer<GrcResource> L
@{
    ViewData["Title"] = L["Public:Services:Title"];
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-4">@L["Public:Services:Headline"]</h1>
                <p class="lead">@L["Public:Services:Subtitle"]</p>
            </div>
        </div>
    </div>
</section>

<!-- Telecommunications Engineering -->
<section id="telecom" class="py-5">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <i class="fas fa-satellite-dish fa-5x text-brand-teal mb-4"></i>
                <h2 class="text-brand-primary mb-4">@L["Public:Services:Telecom:Title"]</h2>
                <p class="lead mb-4">
                    @L["Public:Services:Telecom:Desc"]
                </p>
                <h5 class="text-brand-primary mb-3">@L["Public:Services:KeyPoints"]</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Services:Telecom:Point1"]</li>
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Services:Telecom:Point2"]</li>
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Services:Telecom:Point3"]</li>
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Services:Telecom:Point4"]</li>
                    <li class="mb-2"><i class="fas fa-check text-brand-teal me-2"></i> @L["Public:Services:Telecom:Point5"]</li>
                </ul>
                <p class="mt-4">
                    @L["Public:Services:Telecom:FullDesc"]
                </p>
            </div>
            <div class="col-lg-6">
                <div class="service-card p-4 bg-light">
                    <h5 class="text-brand-primary mb-3">@L["Public:Services:Benefits"]</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-arrow-left text-brand-teal me-2"></i> @L["Public:Services:Telecom:Benefit1"]</li>
                        <li class="mb-2"><i class="fas fa-arrow-left text-brand-teal me-2"></i> @L["Public:Services:Telecom:Benefit2"]</li>
                        <li class="mb-2"><i class="fas fa-arrow-left text-brand-teal me-2"></i> @L["Public:Services:Telecom:Benefit3"]</li>
                        <li class="mb-2"><i class="fas fa-arrow-left text-brand-teal me-2"></i> @L["Public:Services:Telecom:Benefit4"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

