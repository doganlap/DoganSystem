@using Microsoft.Extensions.Localization
@inject IStringLocalizer<DoganSystem.Localization.GrcResource> L
@model DoganSystem.Modules.AgentOrchestrator.Application.Dtos.UpdateEmployeeAgentDto
@{
    ViewData["Title"] = L["Agent:EditTitle"];
    var agentId = ViewContext.RouteData.Values["id"];
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2><i class="fas fa-user-edit me-2"></i>@L["Agent:EditEmployeeAgent"]</h2>
            <form asp-action="Edit" asp-route-id="@agentId" method="post">
                <div class="form-group mb-3">
                    <label asp-for="EmployeeName" class="form-label">@L["Agent:EmployeeName"]</label>
                    <input asp-for="EmployeeName" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label">@L["Common:Role"]</label>
                    <input asp-for="Role" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Department" class="form-label">@L["Agent:Department"]</label>
                    <input asp-for="Department" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label">@L["Common:Status"]</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Available">@L["Agent:StatusAvailable"]</option>
                        <option value="Busy">@L["Agent:StatusBusy"]</option>
                        <option value="Away">@L["Agent:StatusAway"]</option>
                        <option value="Offline">@L["Agent:StatusOffline"]</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>@L["Agent:UpdateAgent"]</button>
                    <a href="/Agents" class="btn btn-secondary"><i class="fas fa-times me-1"></i>@L["Common:Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
